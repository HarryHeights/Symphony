<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/album_spinner_image"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:padding="5dp"
    app:srcCompat="@mipmap/ic_launcher"
    android:contentDescription="@string/album_art_description"/>

<TextView
    android:id="@+id/album_spinner_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/album_spinner_image"
    android:padding="5dp"
    android:textStyle="bold"
    android:text="@string/album_placeholder"/>
</RelativeLayout>